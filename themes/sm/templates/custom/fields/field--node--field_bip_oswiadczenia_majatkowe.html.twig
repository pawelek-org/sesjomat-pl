<div class="columns">
  {% set num = 1 %}
  {%- for item in items -%}
    <div class="column col-auto">
      <a class="btn btn-sm" title="BIP: Oświadczenie majątkowe {{ num }}" href="{{ item.content|render|raw }}" target="_blank" rel="nofollow"><i class="icon icon-link"></i> {{ num }}</a>
      {% set num = num + 1 %}
    </div>
  {%- endfor -%}
</div>

